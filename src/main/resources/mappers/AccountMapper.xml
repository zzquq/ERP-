<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.syuct.mapper.AccountMapper">


    <select id="getAccountNameById" parameterType="int" resultType="java.lang.String">
        select name
        from account
        where id = #{id};

    </select>
    <select id="getAccountIdByName" resultType="java.lang.String">
        select id
        from account
        where name = #{name};

    </select>
</mapper>





